<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="screensaver.mqtt"
    name="MQTT Screensaver for Kodi"
    version="1.0.2"
    provider-name="Tigre-Bleu">
  <requires>
    <import addon="xbmc.python" version="2.14.0"/>
  </requires>
  <extension point="xbmc.ui.screensaver" library="default.py" />
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">A screensaver to send screensaver status to MQTT</summary>
    <description lang="en">Send ON or OFF on a MQTT topic</description>
    <website>git.tigre-bleu.net</website>
    <email>devel@tigre-bleu.net</email>
    <source>https://git.tigre-bleu.net/tigre-bleu/mqtt.screensaver</source>
  </extension>
</addon>
